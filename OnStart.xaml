<Page x:Class="XInsure.Workflow.Designer.OnStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:Views="clr-namespace:XInsure.Workflow.Designer.View"
      mc:Ignorable="d"      
      Width="1300"
      Height="800"
      Title="Start">
    <Grid>
        <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top"  Height="800" Width="1300" Margin="0,0,0,-19">
            <TabControl   x:Name="TabContainer"  >
                <TabItem Header="Design Workflow" x:Name="WorkflowContainer"  >
                    <Views:DesignerView />
                </TabItem>
                <TabItem Header="Workflows" x:Name="WorkflowEdit">
                    <Views:DefinitionsView Margin="0,0,500,300"/>
                </TabItem>
            </TabControl>
        </StackPanel>



    </Grid>
</Page>
